""" QiToolchain command line tool
"""

# sys.path

import os
import sys

def patch_sys_path():
    """
    Add self sources to sys.path, so that directly using this script
    from the sources works

    """
    this_dir = os.path.dirname(__file__)
    to_add =  os.path.join(this_dir, "..")
    to_add = os.path.abspath(to_add)
    sys.path.insert(0, to_add)


patch_sys_path()


try:
    import argparse
except ImportError:
    from qibuild.external import argparse
import qibuild.script

def main():
    parser = argparse.ArgumentParser()
    modules = qibuild.script.action_modules_from_package("qitoolchain.actions")
    qibuild.script.root_command_main("qitoolchain", parser, modules)

if __name__ == "__main__":
    main()
